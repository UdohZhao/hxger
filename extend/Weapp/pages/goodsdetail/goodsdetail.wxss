
.page{
  background-color: #F1F1F1;
}
.clear{
  clear: both;
}
.swiper {
  height: 400rpx;
  width: 100%;
}
.swiper image {
  height: 100%;
  width: 100%;
}
.weui-grid{
  width: 25%;
  border: 0;
}
.goods_body{
  width: 100%;
  background-color: #fff;
}
.goodsStyle{
  border-bottom: 1px solid #eee;
  text-indent: 30rpx;
  /* 文字之间的距离 */
  letter-spacing:5rpx;
}
.goods_name{
  font-size: 16px;
  padding:30rpx 0;
  
}
.goods_pic{
  height: 100rpx;
  line-height: 100rpx;
}
.goods_num{
  float: right;
  color: #999;
  padding-right: 20rpx;
}
.goods_pic_num{
  color: #f00;
  width: 160rpx;
  display: inline-block;
}
.goods_pic_num_origin{
  text-decoration: line-through;
  color: #999;
  display: inline-block;
  width: 160rpx;
  font-size: 14px;
}
.teJia{
  font-size: 14px;
  width: 100%;
  padding: 20rpx 0;
}
.tejiaStyle{
  height: 70rpx;
  line-height: 70rpx;
  overflow: hidden;
}
.teJia_red{
  color: #fff;
  background-color: #f00;
  padding:10rpx 20rpx;
  border-radius: 5px;
}
.guigeStyle{
  padding:20rpx 0;
  line-height: 70rpx;
}
.btn{
  padding: 5rpx 20rpx;
  border: 1px solid #ddd;
  text-align: center;
  margin-left: 20rpx;
  font-size: 14px;
  border-radius: 5rpx;
}
.active{
  border: 1px solid #FE6934;
}
/*相关食谱  */
.recipe_body{
  margin-top: 30rpx;
  padding:20rpx;
  background-color: #fff;
}
.recipe_title{
  text-align: center;
  color: #999;
  vertical-align: middle;
}
.recipe_title text{
  font-size: 20px;
  vertical-align: middle;
}
.weui-media-box__hd_in-appmsg{
  height: 70px;
}
.weui-media-box__desc{
  height: 40rpx;
  width: 100%;
  overflow: hidden;
  margin: 10rpx 0; 
}
.eye,.star{
  display: inline-block;
  width: 200rpx;
  vertical-align: top;
}
.eye image,.star image{
  width: 34rpx;
  height: 34rpx;
  display: inline-block;
  vertical-align: top;
  margin-right: 20rpx;
}
.weui-cell__bd{
  text-align: center;
}
.weui-panel:before,.weui-panel:after{
  border:0;
}
.page__bd{
  min-height: 145px;
  
}
.page_bd_list::before{
  display: block;
  clear: both;
  content: '';
}
.page_bd_list{
  float: left;
  width: 33%;
}
.page_bd_list image{
  width: 100%;
  height: 150rpx;
  display: inline-block;
}
.page_bdStyle{
  height: 60rpx;
  line-height: 60rpx;
  text-indent: 30rpx;
  width: 100%;
  overflow: hidden;
}
.red{
  color: red;
}
.footer_mess{
  text-align: center;
  padding:40rpx 0;
  color: #ccc;
  margin-bottom: 43px;
}

/* 加入购物车 */
.group{
  position: fixed;
  bottom: 0;
  right: 0;
  width: 100%;
  height: 43px;
  line-height: 43px;
  border-top:1px solid #ddd;
  background-color:#fff;
  clear: both; 
}
/* 添加数字 */
.weui-cells_after-title{
  float: left;
  width: 40%;
  height: 40rpx;
}
/*主容器*/
.stepper {
	width: 250rpx;
	height: 70rpx;
	/*给主容器设一个边框*/
	border: 2rpx solid #ccc;
	border-radius: 6rpx;
	margin:0 auto;
}


/*加号和减号*/
.stepper text {
	width: 80rpx;
	line-height: 70rpx;
	text-align: center;
	float: left;
}


/*数值*/
.stepper input {
	width: 80rpx;
	height: 70rpx;
  line-height: 70rpx;
	float: left;
	margin: 0 auto;
	text-align: center;
	font-size: 24rpx;
	/*给中间的input设置左右边框即可*/
	border-left: 2rpx solid #ccc;
	border-right: 2rpx solid #ccc;
}

/*普通样式*/
.stepper .normal{
	color: black;
}

/*禁用样式*/
.stepper .disabled{
	color: #ccc;
}
.weui-cells:after,.weui-cell:before,.weui-cells:before{
  border: 0;
}
.bottom-btn{
  float: right;
  height: 100%;
  padding:10rpx 20rpx;
  background-color: #C14114;
  line-height:2;
  color: #fff;
}
.Img image{
  width: 100%;
  height: 240px;
  display: block;
  margin-top: 15px;
}