<view class="page">
    <view class="page__hd">
        <view class="page__title">订单列表</view>
    </view>
    <view class="page__bd marTop90">
        <view class="weui-tab">
            <view class="weui-navbar">
                <block wx:for="{{tabs}}" wx:key="*this">
                    <view id="{{index}}" class="weui-navbar__item {{activeIndex == index ? 'weui-bar__item_on' : ''}}"
                          bindtap="tabClick">
                        <view class="weui-navbar__title">{{item}}</view>
                    </view>
                </block>
                <view class="weui-navbar__slider"
                      style="left: {{sliderLeft}}px; transform: translateX({{sliderOffset}}px); -webkit-transform: translateX({{sliderOffset}}px);">
                
                </view>
            </view>
            <view class="weui-tab__panel">
                <!-- 待发货 -->
                <view class="weui-tab__content" hidden="{{activeIndex != 0}}">
                    <!-- 订单列表 -->
                    <view class="weui-form-preview" wx:if="{{data}}">
                        <view class="weui-panel__bd">
                        
                            <view class="weui-media-box__title">[配送] 永辉生活-重庆江北区红石路店 订单取消</view>
                            <view  class="weui-media-box weui-media-box_appmsg" hover-class="weui-cell_active">
                                <view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
                                    <image class="weui-media-box__thumb" src="../../dist/imaegs/si.jpg" />
                                </view>
                                <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
                                    <view class="weui-media-box__title">标题一</view>
                                    <view class="weui-media-box__desc">由各种物质组成的巨型球状天体，叫做星球。星球有一定的形状，有自己的运行轨道。</view>
                                </view>
                            </view>
                        </view>










                    </view>
                    <view wx:else>
                        <view class="errorMsg">
                            <view class="errorMsg_img"><image src="../../dist/images/indentMsg.png"/></view>
                            <view class="errorMsg_desc">无此类订单，赶紧下单生鲜汇购买吧</view>
                            <button class="weui-btn mini-btn" type="primary" size="mini" bindtap="gotoIndex">去首页逛逛</button>
                        </view>
                    </view>
                </view>
                <view class="weui-tab__content" hidden="{{activeIndex != 1}}">
                    <!-- 订单列表 -->
                    <view class="weui-form-preview" wx:if="{{data}}">
                    </view>
                    <view wx:else>
                       <view class="errorMsg">
                            <view class="errorMsg_img"><image src="../../dist/images/indentMsg.png"/></view>
                            <view class="errorMsg_desc">无此类订单，赶紧下单生鲜汇购买吧</view>
                            <button class="weui-btn mini-btn" type="primary" size="mini" bindtap="gotoIndex">去首页逛逛</button>
                        </view>
                    </view>
                </view>
                <view class="weui-tab__content" hidden="{{activeIndex != 2}}">
                    <!-- 订单列表 -->
                    <view class="weui-form-preview" wx:if="{{data}}">
                    </view>
                    <view wx:else>
                        <view class="errorMsg">
                            <view class="errorMsg_img"><image src="../../dist/images/indentMsg.png"/></view>
                            <view class="errorMsg_desc">无此类订单，赶紧下单生鲜汇购买吧</view>                  
                            <button class="weui-btn mini-btn" type="primary" size="mini" bindtap="gotoIndex">去首页逛逛</button>
                        </view>
                    </view>
                </view>
                <view class="weui-tab__content" hidden="{{activeIndex != 3}}">
                    <!-- 订单列表 -->
                    <view class="weui-form-preview" wx:if="{{data}}">
                    </view>
                    <view wx:else>
                        <view class="errorMsg">
                            <view class="errorMsg_img"><image src="../../dist/images/indentMsg.png"/></view>
                            <view class="errorMsg_desc">无此类订单，赶紧下单生鲜汇购买吧</view>                            
                            <button class="weui-btn mini-btn" type="primary" size="mini" bindtap="gotoIndex">去首页逛逛</button>
                        </view>
                    </view>
                </view>
            </view>
        </view>
    </view>
</view>