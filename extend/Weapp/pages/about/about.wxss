.page__hd{
  position: fixed;
  top:0;
  left: 0;
  background-color: #fff;
  height: 80rpx;
  line-height: 80rpx;
  width: 100%;
  text-align: center;
  z-index: 2;
}
.page__title{
  border-bottom: 1px solid #ddd;
  color: #ff8900;
}
.marTop90{
  margin-top: 90rpx;
}
.weui-cells:before{
  border-top: 0;
  }
.page_bd{
  position: relative;
  width: 100%;
  height: 600rpx;
  border-bottom: 1px solid #FE6732;
}
.aboutImg{
  position: absolute;
  top:50%;
  left: 50%;
  transform: translateX(-50%) translateY(-50%);
  width: 300rpx;
  height: 240rpx;
}
.aboutImg image{
  display: block;
  width: 300rpx;
  height: 240rpx;
}
.page_bd_text{
  position: relative;
  width: 100%;
  height: 600rpx;
}
.desc{
  width: 600rpx;
  height: 400rpx;
  text-align: center;
}
.desc  view{
  line-height: 80rpx;
  height: 80rpx;
}