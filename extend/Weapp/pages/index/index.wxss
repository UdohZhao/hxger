/*主容器*/
.stepper {
	width: 250rpx;
	height: 70rpx;
	/*给主容器设一个边框*/
	border: 2rpx solid #ccc;
	border-radius: 6rpx;
	margin:0 auto;
}


/*加号和减号*/
.stepper text {
	width: 80rpx;
	line-height: 70rpx;
	text-align: center;
	float: left;
}


/*数值*/
.stepper input {
	width: 80rpx;
	height: 70rpx;
  line-height: 70rpx;
	float: left;
	margin: 0 auto;
	text-align: center;
	font-size: 24rpx;
	/*给中间的input设置左右边框即可*/
	border-left: 2rpx solid #ccc;
	border-right: 2rpx solid #ccc;
}

/*普通样式*/
.stepper .normal{
	color: black;
}

/*禁用样式*/
.stepper .disabled{
	color: #ccc;
}
.weui-cells:after,.weui-cell:before,.weui-cells:before{
